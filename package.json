    "ink": "^5.0.0",
    "lru-cache": "^11.2.4",
    "marked": "^12.0.0",
    "proxy-from-env": "^1.1.0",
    "react": "^18.2.0",
    "sharp": "^0.33.0",
    "socks-proxy-agent": "^8.0.5",
    "tree-sitter": "^0.25.0",
    "tree-sitter-wasms": "^0.1.13",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2",
    "uuid": "^9.0.0",
    "web-tree-sitter": "^0.26.3",
    "ws": "^8.18.3",
    "zod": "^3.22.0"
